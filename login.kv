<LoginScreen>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 5
        canvas.before: 
            Color: 
                rgba: (1, 1, 1, 0.3) 
            Rectangle: 
                source:'world.jpg'
                size: root.width, root.height 
                pos: self.pos
        Label:
            text: "The World is Mine"
            font_size: 50
            background_color: (0,0,1,1)
            color:(0.2,0.5,0.8,1)
            bold: True
            size_hint_x: None
            size_hint_y: None
            width: self.texture_size[0]
            pos_hint: {'x':0.1}
            padding: 0,150,0,0
        Label:
            text: "Login"
            font_size: 50
            background_color: (0,0,1,1)
            bold: True
            size_hint_x: None
            width: self.texture_size[0] 
            pos_hint: {'x':0.1}
        TextInput: 
            id: user_name  
            background_color: 0, 0, 0, 0   
            canvas.before:
                Line:
                    width:2
                    rectangle: self.x, self.y, self.width,self.height
        TextInput: 
            id: user_password 
            background_color: 0, 0, 0, 0     
            canvas.before:
                Line:
                    width:2
                    rectangle: self.x, self.y, self.width,self.height
             
        Button:
            text: "Login"
            background_color: 0, 0, 0, 0
            size_hint: None, None
            pos_hint: {'center_x':0.5}
            canvas.before:
                Line:
                    width:2
                    rectangle: self.x, self.y, self.width,self.height

<RootWidget>:
    LoginScreen:
        id: login_screen
        name: 'login_screen'