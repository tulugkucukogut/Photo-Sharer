<LoginScreen>:
    RelativeLayout:
        spacing: 5
        canvas.before: 
            Color: 
                rgba: (1, 1, 1, 1) 
            Rectangle: 
                source: 'world.jpg'
                size: root.width, root.height 
                pos: self.pos

        # Adjusting the size_hint_y to be relative to the parent's height
        BoxLayout:
            spacing: 5
            orientation: "vertical"
            size_hint_x: 0.6
            size_hint_y: 0.6
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # Adjust the position

            canvas.before:
                BorderImage:
                    source: 'world.jpg'
                    border: 10, 10, 10, 10
                    pos: self.pos
                    size: self.size

            Label:
                text: "The World is Mine"
                font_size: 50
                size_hint_y: 0.1
                background_color: (0, 0, 1, 1)
                color: (0.2, 0.5, 0.8, 1)
                bold: True

            Label:


                text: "Login"
                size_hint_y: 0.1
                font_size: 30
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # Adjust the position

            TextInput: 
                id: user_name  
                background_color: 0, 0, 0, 0
                size_hint_y: 0.1
                size_hint_x: 0.65
                pos_hint: {'center_x': 0.5}
                canvas.before:
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height

            TextInput: 
                id: user_password 
                background_color: 0, 0, 0, 0
                size_hint_y: 0.1
                size_hint_x: 0.65
                pos_hint: {'center_x': 0.5}
                
                canvas.before:
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height

            Button:
                text: "Login"
                background_color: 0, 0, 0, 0
                size_hint: None, None
                pos_hint: {'center_x': 0.5}
                canvas.before:
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height

<RootWidget>:
    LoginScreen:
        id: login_screen
        name: 'login_screen'